extends layout.pug

block content
   .div(class="lg:max-w-xl m-auto catalogo-detalle p-8")
      div(class="w-10/12 lg:w-9/12 catalogo-detalle__image m-auto relative")
         img.m-auto.rounded-lg(src="src/images/netflix-catalogo.png", alt="")
         div(class="w-10/12 lg:w-9/12 rounded-lg bg-blue-100 m-auto p-5  catalogo-detalle__content")
            p.text-white.font-light.pb-1 Bono Netflix por <span>$50.000</span>
            p.text-white.text-xs.font-light 250 Unidades disponibles
      .accordion.mb-20.catalogo-detalle__accordion
         include src/macros/catalogo-detalle-item.pug
         include src/macros/catalogo-detalle-item-2.pug
         include src/macros/catalogo-detalle-item-3.pug
   .catalogo-detalle__buttons
      .div(class="lg:max-w-xl m-auto catalogo-detalle p-8 flex justify-evenly")
         a.text-blue-100(href="") Volver
         button(type="submit" class="button button--dark text-white rounded-full py-2 px-5 lg:px-10 md:px-8") Redimir


